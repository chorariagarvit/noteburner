{
  "name": "noteburner-backend",
  "version": "1.0.0",
  "description": "NoteBurner backend API - Cloudflare Workers",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --port 8787 --local --var FRONTEND_URL:http://localhost:5173 --var RATE_LIMIT_REQUESTS:100",
    "dev:setup": "wrangler d1 migrations apply noteburner-db --local < /dev/null || true",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "d1:create": "wrangler d1 create noteburner-db",
    "d1:migrations:apply": "wrangler d1 migrations apply noteburner-db",
    "d1:migrations:create": "wrangler d1 migrations create noteburner-db"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "encryption"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251223",
    "wrangler": "^4.56.0"
  },
  "dependencies": {
    "hono": "^4.6.14",
    "nanoid": "^5.0.8"
  }
}
